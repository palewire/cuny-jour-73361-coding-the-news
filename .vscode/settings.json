{
  "chat.useAgentSkills": true,
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": true,
    "yaml": true
  },

  "editor.tabSize": 4,
  "editor.insertSpaces": true,

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[svelte]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/*.egg-info": true,
    "**/.coverage": true
  },

  "cSpell.dictionaryDefinitions": [
    {
      "name": "project-terms",
      "path": "${workspaceFolder}/.codespell-ignore-words.txt",
      "addWords": true
    }
  ],
  "cSpell.dictionaries": ["project-terms"],
  "cSpell.ignorePaths": [
    "package-lock.json",
    "node_modules",
    "build",
    ".svelte-kit"
  ],

  "svelte.language-server.lsConfig": {
    "svelte.plugin.svelte.mdx.enable": true,
    "svelte.plugin.typescript.enable": true
  },

  "search.exclude": {
    "**/build": true,
    "**/node_modules": true,
    "**/.venv": true,
    "**/package-lock.json": true,
    ".husky": true,
    ".git": true,
    ".svelte-kit": true
  }
}
